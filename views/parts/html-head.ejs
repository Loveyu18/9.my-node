            /* 線條動畫 */
            .wavesection {
                /* position: relative; */
                position: fixed;
                top: 40%;
                width: 100%;
                height: 150px;
                /* background: #3586ff; */
                overflow: hidden;
                z-index: -1;
            }

            .wavesection .wave {
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 100px;
                background: url(../imgs-pro/wave01.png);
                background-size: 1000px 100px;
            }

            .wavesection .wave.wave1 {
                animation: animate 40s linear infinite;
                z-index: 1000;
                opacity: 1;
                bottom: 0;
            }

            .wavesection .wave.wave2 {
                animation: animate2 20s linear infinite;
                z-index: 995;
                opacity: 0.8;
                bottom: 10px;
            }

            .wavesection .wave.wave3 {
                animation: animate3 25s linear infinite;
                z-index: 998;
                opacity: 0.4;
                bottom: 25px;
            }

            @keyframes animate {
                0% {
                    background-position-x: 0;
                }

                100% {
                    background-position-x: 1000px;
                }
            }

            @keyframes animate2 {
                0% {
                    background-position-x: 0;
                }

                100% {
                    background-position-x: -1000px;
                }
            }

            @keyframes animate3 {
                0% {
                    background-position-x: 0;
                }

                100% {
                    background-position-x: 1000px;
                }
            }
        </style>
